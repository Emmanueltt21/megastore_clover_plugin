<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#f5f5f5">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#D5DBD5"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="MegaStore Logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="MegaStore Plugin"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2c3e50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.0"
            android:textSize="14sp"
            android:textColor="#7f8c8d"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to MegaStore Plugin!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34495e"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✓ Plugin launched successfully"
            android:textSize="14sp"
            android:textColor="#27ae60"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">



        <Button
            android:id="@+id/btn_open_custom_order"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Open Custom Order"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/button_secondary"
            android:layout_marginBottom="12dp"
            android:elevation="2dp" />
    </LinearLayout>

    <!-- Integration Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#cecece"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clover Integration Features"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34495e"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Register Plugin Integration\n• SDK Connection Active\n• Event Broadcasting Enabled\n• Background Service Running"
            android:textSize="14sp"
            android:textColor="#5d6d7e"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MegaStore Plugin © 2025\nIntegrated with Clover SDK"
        android:textSize="12sp"
        android:textColor="#95a5a6"
        android:gravity="center"
        android:padding="8dp" />

</LinearLayout>